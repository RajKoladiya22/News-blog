<%- include("header") %>

	<div class="app-wrapper">

		<div class="app-content pt-3 p-md-3 p-lg-4">
			<div class="container-xl">

				<h1 class="app-page-title">Overview</h1>

				<% record.map((val)=>{ %>

					<div class="app-card alert alert-dismissible shadow-sm mb-4 border-left-decoration" role="alert">
						<div class="inner">
							<div class="app-card-body p-3 p-lg-4 d-flex">
								<div class="col-xxl-3">
									<img src="<%= val.img %>" alt="" class="img-fluid">
								</div>
								<div class="col-xxl-9" style="padding-left:15px">
									<h3 class="mb-3"><%= val.title %></h3>
								<div class="row gx-5 gy-3">
									<div class="col-12 col-lg-9">
	
										<div><%= val.desc %></div>
										<span><%= val.date  %></span>
									</div>
									<div class="col-12 col-lg-3">
										<a class="btn app-btn-primary"
											href="/editNews?id=<%= val.id %>"><i class="far fa-edit"></i> Edit</a>
										<a class="btn app-btn-primary"
											href="/deleteNews?id=<%= val.id %>" style="background-color:red"><i class="far fa-edit"></i> Delete</a>
									</div>
								</div>
								</div>
							</div>
						</div>
					</div>

				<% }) %>

				

			</div>
		</div>

	</div><!--//app-wrapper-->


	<%- include("footer") %>