<%- include("header") %>

<div class="app-wrapper">
    <p>Page/Add News</p>
    <center>
            <form action="/updateNews" method="post" enctype="multipart/form-data">
                <table>
                    <input type="hidden" name="editid" id="" value="<%= single.id %>">
                    <tr>
                        <td>Title : </td>
                        <td><input type="text" name="title" value="<%= single.title  %>"></td>
                    </tr>
                    <tr>
                        <td>Date : </td>
                        <td><input type="date" name="date" value="<%= single.date %>"></td>
                    </tr>
                    <tr>
                        <td>Description : </td>
                        <td><textarea name="desc" id="" cols="22" rows="10" value="<%= single.desc %>" ><%= single.desc %></textarea></td>
                    </tr>
                    <tr>
                        <td>Image : </td>
                        <td>
                            <input type="file" name="img">
                            <img src="<%= single.img %>" alt="" width="100">
                        </td>
                    </tr>
                    <tr>
                        <td >
                            <input type="submit" value="submit">
                        </td>
                    </tr>
                </table>
            </form>
    </center>
    </div>

<%- include("footer") %>